{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "debug"
  },
  "spec": {
    "containers": [{
      "name": "debug",
      "image": "busybox",
      "command": ["sh"],
      "stdin": true,
      "tty": true,
      "volumeMounts": [{
        "mountPath": "/models",
        "name": "models-storage"
      }]
    }],
    "volumes": [{
      "name": "models-storage",
      "persistentVolumeClaim": {
        "claimName": "ml-models-pvc"
      }
    }],
    "restartPolicy": "Never"
  }
}
